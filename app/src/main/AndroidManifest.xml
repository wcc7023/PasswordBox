<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wang.eggroll.passwordbox">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>

        <activity android:name=".view.ShareActivity"
            android:theme="@style/AppTheme"/>

        <activity android:name=".view.ConfirmPatternActivity"
            android:theme="@style/PatternView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SetPatternActivity"
            android:theme="@style/PatternView"/>
        <activity android:name=".view.ForgotPasswordActivity"/>
        <activity android:name=".view.SettingsActivity" />
        <activity android:name=".view.ConfirmForPwdResetActivity"
            android:theme="@style/PatternView"/>
    </application>

</manifest>